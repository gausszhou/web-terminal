{
  "name": "@web-terminal/mockpty",
  "version": "1.0.0",
  "description": "Web Terminal Mock PTY - 用于浏览器环境的伪终端实现",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build && pnpm --package=typescript dlx tsc",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "keywords": [
    "mock",
    "pty",
    "web-terminal"
  ],
  "author": "Web Terminal Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsc": "^2.0.4",
    "typescript": "^5.0.0",
    "vite": "^4.5.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  }
}